<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	<!-- DB 설정 -->
	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="java:comp/env/jdbc/append"/>
	</bean>

	<bean id="sqlSessionFactoryBean" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource"/>
<!--	 	typeAliasesPackage : 이 패키지 밑에 있는 클래스들을 typeAliase 설정으로 바꿔줌 -->
		<property name="typeAliasesPackage" value="com.ssafy.prj.model.dto" />		
<!--		 mapper 폴더 밑에 있는 모든 .xml 파일을 읽어라 -->
		<property name="mapperLocations" value="classpath:mapper/*.xml" />
<!-- 		alias 위에서 처리해줬으니 이건 없어도 됨 -->
<!-- 		<property name="configLocation" value="classpath:mybatis-config.xml"/> -->
	</bean>
	
<!--  		Mapper interface 타입의 객체를 빈으로 등록설정 -> sqlsession안 쓰고 바로 autowired로 사용 가능 -->
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.ssafy.prj.model.mapper" />
	</bean>
	
<!-- 	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactoryBean"/>
	</bean> -->
</beans>
