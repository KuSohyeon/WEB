<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.guestbook.model.dao.UserDao">
		<!-- 			매개변수 타입(sql에 들어갈 값)		리턴타입 -->
	<select id="login" parameterType="map" resultType="member">
		select username, userid, email
		from ssafy_member
		where userid = #{userid} and userpwd = #{userpwd}
		<!-- 파라미터가 하나인 경우에는 이름을 아무거나해도 상관없지만 여러가지일 경우 
				dto의 멤버필드 or 맵의 키를 #{} 형식으로 작성  -->
	</select>
	
	<select id="register" parameterType="member" resultType="member">
		insert into ssafy_member
		values ( #{userid}, #{username},  #{userpwd},  #{useremail});
	</select>
	
</mapper>