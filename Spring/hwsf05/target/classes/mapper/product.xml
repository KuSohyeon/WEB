<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.product.model.mapper.ProductMapper">

	<insert id="add" parameterType="Product">
		insert into product
		(id,name,price,content)
		values (#{id},#{name}, #{price},#{content})
	</insert>

	<select id="list" resultType="Product">
		select id, name, price, content
		from product
		order by id
	</select>


	<select id="detail" parameterType="string" resultType="Product">
		select *
		from
		product
		where id = #{id}
	</select>


	<delete id="delete" parameterType="string">
		delete from product
		where id = #{id}
	</delete>

	<update id="modify" parameterType="Product">
		update product
		set price = #{price}, content = #{content}
		where id = #{id}
	</update>
</mapper>