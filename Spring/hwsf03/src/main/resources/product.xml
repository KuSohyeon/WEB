<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.model.repository.ProductRepo">

	<insert id="add" parameterType="product">
		insert into product2
		(id,name,price,content)
		values (#{id},#{name}, #{price},#{content})
	</insert>

	<select id="search" parameterType="map"
		resultType="product">
		select no, id, name, price, content
		from product2
		<if test="word != null and word != ''">
			<if test="key == 'subject'">
				where subject like concat('%', #{word}, '%')
			</if>
			<if test="key != 'subject'">
				where ${key} = #{word}
			</if>
		</if>
		order by no 
	</select>



	<select id="detail" parameterType="int"
		resultType="product">
		select *
		from
		product2
		where no = #{no}
	</select>



	<delete id="delete" parameterType="int">
		delete from product2
		where no = #{no}
	</delete>

</mapper>