<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.ssafy.book.model.mapper.BookMapper">

	<insert id="write" parameterType="Book">
		insert into book 
		values (#{isbn},#{title},#{catalogue},#{nation},#{publish_date},#{publisher},#{author},#{price},#{currency},#{description})
	</insert>
	
	<select id="list" parameterType="map" resultType="Book">
		select * 
		from book
		<if test="word!=null and word!=''">
			<if test="key != 'price'">
				where ${key} like concat('%',#{word},'%')
			</if>
			<if test="key == 'price'">
				where ${key} &lt;= #{word}
			</if>
		</if>
		order by title
	</select>
	
	<select id="detail" parameterType="string" resultType="Book">
		select *
		from book
		where isbn = #{isbn}
	</select>
	
	<delete id="delete" parameterType="string">
		delete 
		from book
		where isbn = #{isbn}
	</delete>

</mapper>